<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/dateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/dayInDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_bold"
            android:text="@string/date_in_digit"
            android:textSize="@dimen/date_in_digit_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/monthType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:text="@string/month_type"
            android:layout_below="@id/dayInDigit"
            android:layout_alignParentStart="true"
            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dateMaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/dateDisplay"
        android:background="@drawable/circle_shaped_item">

    </RelativeLayout>


</RelativeLayout>